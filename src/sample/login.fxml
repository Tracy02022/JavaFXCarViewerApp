<GridPane alignment="center" hgap="10" prefHeight="641.0" prefWidth="669.0" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
      <ColumnConstraints maxWidth="Infinity" minWidth="140.0" prefWidth="140.0" />
      <ColumnConstraints halignment="LEFT" maxWidth="Infinity" minWidth="160.0" prefWidth="160.0" />
      <ColumnConstraints />
    </columnConstraints>
    <!-- Add Email Label -->
    <Label prefHeight="25.0" prefWidth="142.0" text="Email / Username : " textFill="#f7fafa" GridPane.columnIndex="5" GridPane.rowIndex="4" />
    <!-- Add Email Text Field -->
    <TextField fx:id="emailIdField" prefHeight="24.0" prefWidth="149.0" promptText="email/username" GridPane.columnIndex="6" GridPane.rowIndex="4" />
    <!-- Add Password Label -->
    <Label text="Password : " textFill="#f9ffff" GridPane.columnIndex="5" GridPane.rowIndex="5" />
    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField" prefHeight="27.0" prefWidth="185.0" promptText="password" GridPane.columnIndex="6" GridPane.rowIndex="5" />
    <!-- Add Buttons -->
    <Button fx:id="submitButton" alignment="CENTER" defaultButton="true" onAction="#login" prefHeight="24.0" prefWidth="79.0" style="-fx-background-color: #e7eee4#e7eee4 #e7eee4#e7eee4;" text="Sign in" GridPane.columnIndex="6" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
    <Button alignment="CENTER" contentDisplay="BOTTOM" defaultButton="true" onAction="#register" prefHeight="27.0" prefWidth="106.0" style="-fx-background-color: #e7eee4#e7eee4;" text="Sign up now" textFill="#2817d1" GridPane.columnIndex="6" GridPane.columnSpan="2" GridPane.rowIndex="8" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
   <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="New Here?" GridPane.columnIndex="5" GridPane.rowIndex="8">
      <fill>
         <RadialGradient radius="0.5">
            <stops>
               <Stop color="BLACK" />
               <Stop color="#fcf6f6" offset="0.5743243243243242" />
               <Stop color="WHITE" offset="1.0" />
            </stops>
         </RadialGradient>
      </fill>
      <font>
         <Font name="System Font" size="13.0" />
      </font>
   </Text>
